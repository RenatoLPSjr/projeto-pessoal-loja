<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/nav-admin.ejs'); %>

<hr>
<div class="container">
    <div class="card">
        <div class="card-header text-center fs-4">
            Pesquisa de produtos
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/search">
                <input class="form-control" type="search" name="codigo" placeholder="Escreva o cÃ³digo do produto"><br>
                <div class="d-grid gap-2">
                    <button class="btn btn-warning" type="submit">Buscar</button>
                    <a class="btn btn-warning"  href="/admin/products/register">Cadastrar</a>
                </div>
            </form>
        </div>
    </div>
    <hr>

    <div class="card">
        <div class="card-header">
            <b>Nome do Produto:</b> <%= product.name %>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <b>Cor</b><div class="border"><%= product.color %></div> 
                </div>
                <div class="col">
                    <b>Tamanho:</b><div class="border"><%= product.size %></div> 
                </div>
                <div class="col">
                    <b>Marca:</b> <div class="border"><%= product.marca %></div> 
                </div>
                <div class="col">
                    <b>Quantidade no estoque:</b><div class="border"><%= product.estoque %></div> 
                </div>

            
            </div>
            <div class="row">
                <div class="col">
                    <a href="/admin/product/edit/<%= product.id %>" class="btn btn-warning" type="submit">Editar</a>
                    <form method="POST" action="/admin/products/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name ="id" value="<%= product.id %>">
                        <button class="btn btn-danger" type="submit" >Deletar</button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs'); %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Voce quer deletar esse item?");
        if(decision){
            form.submit();
        }
    }
</script>